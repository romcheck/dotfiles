set vicmd=hx
set trashdir=~/.Trash
set incsearch
set ignorecase
set vifminfo+=savedirs
set wildmenu
set mouse=a

only

mark h ~/
mark z ~/.config/vifm/ vifmrc
mark d ~/Downloads
mark D ~/Documents
mark i ~/icloud
mark f ~/icloud/family
mark l "~/Library/Application Support/OpenVPN Connect/profiles"

colorscheme onedark

filetype {*.pdf,*.jpg,*.jpeg,*.png} open -a Preview.app
filetype {*.doc,*.docx,*.pages} open -a Pages.app
filetype {*.xls,*.xlsx,*.numbers} open -a Numbers.app
filetype {*.mkv} open -a Vlc.app

nnoremap I cw<c-a>
nnoremap cc cw<c-u>
nnoremap A cw
map s :shell<cr>
map ы :shell<cr>
map q :quit<cr>
map й :quit<cr>