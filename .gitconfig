[user]
    email = romcheck@gmail.com
    name = romcheck
    signingkey = ~/Documents/.id_rsa.pub

[core]
    excludesfile = ~/.gitignore
    abbrev = 8
    pager = cat
    symlinks = true

[pager]
   delta = delta

[alias]
   delta = diff

[delta]
  max-line-length = 0

[commit]
    gpgsign = true

[push]
    default = current

[pull]
    ff = only

[gpg]
    format = ssh

[include]
    path = ~/Documents/.gitconfig
